<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        :root {
            --bg-light: #f6ead4;
            --green: #426841;
            --blue: #007bff;
            --blue-dark: #0056b3;
            --input-border: #ddd;
            --input-focus: #007bff;
            --dark-bg: #1e1e1e;
            --dark-border: #555;
            --dark-text: #eee;
        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: var(--bg-light);
            margin: 0;
            overflow: hidden;
        }

        .bg-white {
            background-color: var(--bg-light) !important;
        }

        .bg-image {
            background: url('https://images.unsplash.com/photo-1555396273-367ea8b74c76?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') no-repeat center center fixed;
            background-size: cover;
            color: white;
        }

        .logo-container-left {
            padding-left: 20%;
            max-width: 80%;
            text-align: center;
        }

        .tagline {
            color: var(--green) !important;
            font-size: 1.8rem;
            font-weight: 500;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.9);
            padding: 60px;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            max-width: 450px;
            width: 90%;
            max-height: 90vh;
            overflow-y: auto;
        }

        .logo-container-right {
            text-align: center;
            margin-bottom: 30px;
        }

        h2 {
            font-weight: 700;
            margin-bottom: 35px;
            color: var(--green);
            text-align: center;
            font-size: 2.5rem;
        }

        .form-label {
            font-size: 1.1rem;
            color: #333;
            margin-bottom: 10px;
            display: block;
            text-align: left;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid var(--input-border);
            padding: 16px;
            margin-bottom: 30px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--input-focus);
            outline: none;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        }

        .input-group {
            margin-bottom: 30px;
        }

        .input-group-text {
            background-color: #fff;
            border: 1px solid var(--input-border);
            border-radius: 0 8px 8px 0;
            cursor: pointer;
            margin-bottom: 9%;
            padding: 16px 18px;
            color: #555;
        }

        .btn-primary {
            background-color: var(--green);
            border: none;
            border-radius: 8px;
            padding: 18px 30px;
            font-weight: 600;
            font-size: 1.2rem;
            letter-spacing: 0.5px;
            transition: background-color 0.3s ease, transform 0.2s ease-in-out;
        }

        .btn-primary:hover {
            transform: scale(1.02);
        }

        .btn-primary:active {
            transform: scale(0.98);
        }

        .btn-outline-secondary {
            color: #6c757d;
            border-color: #6c757d;
            border-radius: 8px;
            padding: 18px 30px;
            font-weight: 600;
            margin-top: 25px;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
        }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
        }

        .forgot-text {
            text-align: right;
            font-size: 1rem;
            margin-top: 15px;
            color: var(--blue);
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .forgot-text:hover {
            color: var(--blue-dark);
        }

        .btn-dark-mode {
            position: fixed;
            top: 30px;
            right: 30px;
            background-color: #444;
            color: white;
            border: none;
            padding: 14px 20px;
            border-radius: 50%;
            cursor: pointer;
            z-index: 1000;
            transition: background-color 0.3s ease;
        }

        .btn-dark-mode:hover {
            background-color: #666;
        }

        .dark-mode .bg-image {
            opacity: 0.8;
        }

        .dark-mode .login-card {
            background: rgba(30, 30, 30, 0.9);
            color: var(--dark-text);
            box-shadow: 0 12px 50px rgba(0, 0, 0, 0.8);
        }

        .dark-mode h2,
        .dark-mode .btn-primary,
        .dark-mode .btn-primary:hover {
            color: var(--green);
            background-color: var(--green);
        }

        .dark-mode .form-label {
            color: #ccc;
        }

        .dark-mode .form-control {
            background-color: #333;
            color: var(--dark-text);
            border-color: var(--dark-border);
        }

        .dark-mode .form-control:focus {
            border-color: #66b3ff;
            box-shadow: 0 0 8px rgba(102, 179, 255, 0.5);
        }

        .dark-mode .input-group-text {
            background-color: #333;
            color: var(--dark-text);
            border-color: var(--dark-border);
        }

        .dark-mode .btn-outline-secondary {
            color: #ccc;
            border-color: var(--dark-border);
        }

        .dark-mode .btn-outline-secondary:hover {
            background-color: var(--dark-border);
            border-color: var(--dark-border);
            color: var(--dark-text);
        }

        .dark-mode .btn-dark-mode {
            background-color: #666;
            color: var(--dark-text);
        }

        .dark-mode .btn-dark-mode:hover {
            background-color: #888;
        }

        #error-message {
            display: none;
            margin-top: 25px;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
        }

        .fundo-img {
            max-width: 85%;
            max-height: 85%;
        }
    </style>

</head>

<body>
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <div class="col-md-6 bg-image d-flex align-items-center justify-content-center">
                <div class="logo-container-left">
                    <img src="~/fundo.png" alt="Logo Nutria" class="img-fluid fundo-img">
                    <h1 class="text-white mt-4 text-center tagline">
                        Um facilitador para os nutricionistas e para os pacientes!
                    </h1>
                </div>
            </div>

            <div class="col-md-6 d-flex align-items-center justify-content-center bg-white">
                <div class="login-card text-center">
                    <div class="logo-container-right mb-4">
                        <img src="~/nutria.png" alt="Logo iFood" class="img-fluid" style="max-width: 150px;">
                    </div>
                    <h2>Entrar</h2>
                    <form id="authForm" method="post">
                        <div class="mb-3 text-start">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="Digite seu e-mail" required />
                        </div>
                        <div class="mb-3 text-start">
                            <label for="password" class="form-label">Senha</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Digite sua senha" required />
                                <span id="btnVeja" class="input-group-text"><i id="togglePassword"
                                        class="fas fa-eye"></i></span>
                            </div>
                        </div>
                        <div id="btnEsqueci" class="forgot-text">Esqueci minha senha</div>
                        <div class="d-grid mt-3">
                            <button id="btnLogin" type="submit" class="btn btn-primary text-white" disabled>
                                Entrar <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                        <div id="error-message" class="alert alert-danger mt-3"></div>
                    </form>
                    <div class="mt-3">
                        <a href="/Cadastro" class="btn btn-outline-secondary w-100">Não tem uma conta? Cadastre-se</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button id="toggleDarkMode" class="btn-dark-mode"><i class="fas fa-moon"></i></button>

    <script>
        // Alternar visibilidade da senha
        document.getElementById("btnVeja").addEventListener("click", () => {
            const passwordField = document.getElementById("password");
            const icon = document.getElementById("togglePassword");
            const isPassword = passwordField.type === "password";
            passwordField.type = isPassword ? "text" : "password";
            icon.classList.toggle("fa-eye", !isPassword);
            icon.classList.toggle("fa-eye-slash", isPassword);
        });

        // Redirecionar para recuperação de senha
        document.getElementById("btnEsqueci").addEventListener("click", () => {
            window.location.href = "EsqueciSenha";
        });

        // Validação de campos
        const validarCampos = () => {
            const email = document.getElementById("email").value.trim();
            const senha = document.getElementById("password").value.trim();
            document.getElementById("btnLogin").disabled = !(email && senha);
        };

        document.getElementById("email").addEventListener("input", validarCampos);
        document.getElementById("password").addEventListener("input", validarCampos);

        // Modo escuro
        const toggleDarkMode = document.getElementById("toggleDarkMode");
        const body = document.body;
        const atualizaIconeModo = (modo) => {
            toggleDarkMode.innerHTML = modo === 'enabled'
                ? '<i class="fas fa-sun"></i>'
                : '<i class="fas fa-moon"></i>';
        };

        if (localStorage.getItem("dark-mode") === "enabled") {
            body.classList.add("dark-mode");
            atualizaIconeModo('enabled');
        }

        toggleDarkMode.addEventListener("click", () => {
            const isDark = body.classList.toggle("dark-mode");
            localStorage.setItem("dark-mode", isDark ? "enabled" : "disabled");
            atualizaIconeModo(isDark ? 'enabled' : 'disabled');
        });

        // Envio do formulário
        document.getElementById("authForm").addEventListener("submit", async function (event) {
            event.preventDefault();

            const data = {
                email: document.getElementById("email").value,
                senha: document.getElementById("password").value
            };

            try {
                const response = await fetch("/login", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data)
                });

                const json = await response.json();
                if (!response.ok) {
                    let errorMessage = json.error || Object.values(json.errors || {})[0]?.[0] || "Erro ao autenticar";
                    throw new Error(errorMessage);
                }

                document.getElementById("authForm").reset();
                document.getElementById("btnLogin").disabled = true;
                if (json.token) localStorage.setItem("token", json.token);
                if (json.user?.id) localStorage.setItem("usuarioId", json.user.id);
                window.location.href = "/Redirecionando";
            } catch (error) {
                const msg = document.getElementById("error-message");
                msg.innerText = error.message;
                msg.style.display = "block";
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>